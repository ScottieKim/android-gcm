<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="TitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/textsize_18</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ContentStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/textsize_13</item>
        <item name="android:textColor">@color/darkgrey</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/selector_edittext</item>
        <item name="android:ems">10</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">@dimen/textsize_13</item>
    </style>

</resources>