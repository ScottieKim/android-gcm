<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View" />

        <variable
            name="user"
            type="com.github.scott.gcm.data.model.User" />

        <variable
            name="viewModel"
            type="com.github.scott.gcm.data.viewmodel.AlertViewModel" />

        <variable
            name="isSearch"
            type="Boolean" />

        <variable
            name="position"
            type="Integer" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/textview_searchuser_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@{user.name}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_searchuser_accept"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/button_blue"
            android:onClick="@{()->viewModel.onClickAccept(position)}"
            android:text="@{isSearch ? @string/common_invite : @string/common_accept, default=@string/common_invite}"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_13"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/button_searchuser_deny"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_searchuser_deny"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/button_blue"
            android:onClick="@{()->viewModel.onClickDeny()}"
            android:text="@string/common_deny"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_13"
            android:visibility="@{isSearch ? View.GONE : View.VISIBLE, default = visible}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>