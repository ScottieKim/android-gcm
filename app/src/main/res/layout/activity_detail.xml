<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="community"
            type="com.github.scott.gcm.data.model.Community" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/button_detail_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="20dp"
            android:background="@android:color/transparent"

            android:scaleType="fitCenter"
            android:src="@drawable/back_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageview_detail_photo"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="15dp"
            android:src="@color/grey"
            app:imgUrl="@{community.img}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_detail_back" />

        <TextView
            android:id="@+id/textview_detail_title"
            style="@style/TitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{community.title}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageview_detail_photo" />

        <TextView
            android:id="@+id/textview_detail_type"
            style="@style/ContentStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{community.type}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_detail_title" />

        <RatingBar
            android:id="@+id/ratingbar_detail_review"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintRight_toLeftOf="@+id/textview_detail_reviewcount"
            app:layout_constraintTop_toBottomOf="@+id/imageview_detail_photo" />

        <TextView
            android:id="@+id/textview_detail_reviewcount"
            style="@style/ContentStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.5(980)"
            app:layout_constraintBottom_toBottomOf="@+id/ratingbar_detail_review"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ratingbar_detail_review" />

        <TextView
            android:id="@+id/textview_detail_location"
            style="@style/TitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="location"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ratingbar_detail_review" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/grey"
            app:layout_constraintTop_toBottomOf="@+id/textview_detail_location" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>