<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Gym Community" />

    <EditText
        android:id="@+id/editTextTextPersonName6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Gym Community is an application for exercise lovers who want to workout with any groups.Anyone who wants to exercise can find a sports club around and join the group they want.
You can join wherever you want to join!" />

    <Button
        android:id="@+id/button_list"
        android:layout_width="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="150dp"
        android:layout_height="wrap_content"
        android:text="List로 이동하기" />

    <EditText
        android:id="@+id/editTextTextPersonName7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginLeft="80dp"
        android:text="Haven’t signed up yet? Sign up" />
</LinearLayout>